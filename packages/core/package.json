{
  "name": "@luna/core",
  "version": "0.1.0",
  "description": "Luna UI Core - Shared utilities and design tokens",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/core.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "luna",
    "ui",
    "utilities",
    "design-tokens"
  ],
  "author": "Haithem Ghattas",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@vitejs/plugin-react": "^5.1.2",
    "typescript": "~5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clx": "^1.0.0"
  },
   "peerDependencies": {
    "react": "^19.2.0"
  }
}